{
  "name": "engramx-frontend",
  "private": true,
  "version": "0.1.0",
  "license": "BUSL-1.1",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json,css}\" \"*.{json,js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,js,json,css}\" \"*.{json,js,ts}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,js,ts}": "prettier --write",
    "src/**/*.{css,json}": "prettier --write"
  },
  "dependencies": {
    "@icp-sdk/auth": "^5.0.0",
    "@icp-sdk/core": "^5.0.0",
    "qrcode": "^1.5.4",
    "vue": "^3.5.0",
    "vue-router": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.0.0",
    "@types/qrcode": "^1.5.6",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^10.0.0",
    "eslint-plugin-vue": "^10.8.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.0",
    "workbox-window": "^7.4.0"
  }
}
